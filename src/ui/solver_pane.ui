<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10" />
  <requires lib="libadwaita" version="1.4" />
  <template class="ChopChopSolverPane" parent="GtkBox">
    <object class="GtkSizeGroup">
      <property name="mode">horizontal</property>
      <widgets>
        <widget name="clear_button" />
        <widget name="print_button" />
      </widgets>
    </object>
    <child>
      <object class="AdwOverlaySplitView">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <property name="sidebar_width_fraction">0.35</property>
        <property name="min_sidebar_width">200</property>
        <property name="max_sidebar_width">350</property>
        <property name="sidebar">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">20</property>
            <property name="margin-start">20</property>
            <property name="margin-end">20</property>
            <property name="margin-top">20</property>
            <property name="margin-bottom">20</property>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwComboRow" id="solver_field">
                    <property name="title">Solver</property>
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                          <item>Naive</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="run_button">
                <property name="label">Solve</property>
                <style>
                  <class name="suggested-action" />
                </style>
              </object>
            </child>
          </object>
        </property>
        <property name="content">
          <object class="GtkStack" id="content_stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">nonempty</property>
                <property name="child">
                  <object class="AdwToolbarView">
                    <property name="bottom-bar-style">raised</property>
                    <child type="bottom">
                      <object class="GtkCenterBox">
                        <property name="margin-start">4</property>
                        <property name="margin-end">4</property>
                        <property name="margin-top">4</property>
                        <property name="margin-bottom">4</property>
                        <child type="start">
                          <object class="GtkButton" id="clear_button">
                            <property name="label">Clear</property>
                            <style>
                              <class name="destructive-action" />
                            </style>
                          </object>
                        </child>
                        <child type="end">
                          <object class="GtkButton" id="print_button">
                            <property name="label">Print</property>
                          </object>
                        </child>
                        <style>
                          <class name="toolbar" />
                        </style>
                      </object>
                    </child>
                    <property name="content">
                      <object class="GtkDrawingArea" id="drawing_area"></object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">placeholder</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">info-outline-symbolic</property>
                    <property name="title">No Results</property>
                    <property name="description">Add supplies and parts, then press "Solve" to generate results.</property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>